<Window
    x:Class="Aml.Toolkit.TestUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:AML="http://www.automationml.org/amlTool/"
   
    Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

       

        <ToolBar >
            <Button Click="Undo_Click" IsEnabled="{Binding CanUndo}">Undo</Button>
            <Button Click="Redo_Click" IsEnabled="{Binding CanRedo}">Redo</Button>
        </ToolBar>

        <Grid  Grid.Row="1" ShowGridLines="True">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <AML:AMLTreeView
            Name="IHTree"
            Loaded="IHTree_Loaded" />

            <AML:AMLTreeView
            Name="SUCTree"
            Grid.Row="0"
            Grid.Column="1" />
            <AML:AMLTreeView
            Name="RCTree"
            Grid.Row="1"
            Grid.Column="0" />
            <AML:AMLTreeView
            Name="ICTree"
            Grid.Row="1"
            Grid.Column="1" />
            
        </Grid>
       
    </Grid>
</Window>